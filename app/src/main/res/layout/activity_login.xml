<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="30dp"
    android:background="@drawable/splash">
    <TextView android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="用户登录"
        android:id="@+id/title"/>
    <RelativeLayout android:id="@+id/login_user_view"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:gravity="center"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:id="@+id/login_user_label"/>
        <EditText android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/login_user_input"
            android:background="@null"
            android:layout_toRightOf="@id/login_user_label"
            />
        <ImageView android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/login_pwd_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_user_view">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="20sp"
            android:id="@+id/login_pwd_label"
            android:layout_centerVertical="true"
            />
        <EditText android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:id="@+id/login_pwd_input"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_toRightOf="@id/login_pwd_label"
            android:labelFor="@id/login_pwd_label"
            tools:ignore="LabelFor"
            android:layout_toEndOf="@id/login_pwd_label" />
        <ImageView android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <Button android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:text="登 录"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_control_btn"
        android:textColor="#EEE"
        android:layout_marginBottom="50dp"
        android:id="@+id/login_btn"/>
    
</RelativeLayout>
