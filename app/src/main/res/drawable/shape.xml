<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#ff58bb52" />
                    <corners android:radius="30dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <!--<item android:left="4dp" android:top="4dp" >
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:radius="30dip"/>
                </shape>
            </item>-->
            <!-- CONTENT LAYER -->
            <item android:top="32dp" android:left="2dp" android:right="2dp">
                <shape >
                    <gradient android:angle="270"
                        android:startColor="#0D1f4c8b"
                        android:endColor="#0DFFFFFF" />
                </shape>
            </item>
            <item android:bottom="38dp" android:left="2dp" android:right="2dp">
                <shape >
                    <gradient android:angle="90"
                        android:startColor="#1a1f4c8b"
                        android:endColor="#1aFFFFFF" />
                </shape>
            </item>
            <item android:left="298dp" android:top="2dp" android:bottom="8dp">
                <shape >
                    <gradient android:angle="0"
                        android:startColor="#1a1f4c8b"
                        android:endColor="#1aFFFFFF" />
                </shape>
            </item>
            <item android:right="298dp" android:top="2dp" android:bottom="8dp">
                <shape >
                    <gradient android:angle="180"
                        android:startColor="#1a1f4c8b"
                        android:endColor="#1aFFFFFF" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>